<!DOCTYPE html> <html lang="ar" dir="rtl"> <head> <meta charset="UTF-8"> <meta name="viewport" content="width=device-width, initial-scale=1.0"> <title>Pearl Specialty Coffee | الرئيسية</title> <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet"> <style> @import url('https://fonts.googleapis.com/css2?family=Tajawal:wght@400;700&display=swap'); * { font-family: 'Tajawal', sans-serif; } .menu-item { transition: transform 0.2s ease; } .menu-item:hover { transform: scale(1.02); } </style> </head> <body class="bg-gray-50"> <!-- القائمة العلوية --> <nav class="bg-white shadow-sm sticky top-0 z-50"> <div class="container mx-auto p-4"> <div class="flex justify-between items-center"> <div class="flex items-center space-x-4"> <img src="pearl-logo.png" alt="Pearl Coffee" class="w-16 h-16"> <h1 class="text-xl font-bold">Pearl Specialty Coffee</h1> </div> <button onclick="showCart()" class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700"> السلة <span id="cartCount" class="bg-white text-green-600 px-2 py-1 rounded-full mr-2">0</span> </button> </div> </div> </nav> <!-- القائمة الرئيسية --> <main class="container mx-auto p-4"> <!-- تصفية المنتجات --> <div class="flex gap-4 mb-6"> <button onclick="filterProducts('all')" class="px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300">الكل</button> <button onclick="filterProducts('drinks')" class="px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300">المشروبات</button> <button onclick="filterProducts('desserts')" class="px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300">الحلويات</button> </div> <!-- عرض المنتجات --> <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="productsGrid"></div> </main> <!-- نافذة السلة --> <div id="cartModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50"> <div class="bg-white p-6 rounded-lg w-96 mx-auto mt-20"> <div class="flex justify-between items-center mb-4"> <h2 class="text-xl font-bold">السلة</h2> <button onclick="hideCart()" class="text-gray-500">&times;</button> </div> <div id="cartItems" class="mb-4 max-h-96 overflow-y-auto"></div> <div class="border-t pt-4"> <div class="flex justify-between text-lg font-bold mb-4"> <span>المجموع:</span> <span id="cartTotal">0 ريال</span> </div> <button onclick="checkout()" class="bg-green-600 text-white w-full py-2 rounded-lg hover:bg-green-700"> إتمام الطلب </button> </div> </div> </div> <script> // البيانات const products = { drinks: [ {id: 1, name: 'قهوة أمريكية', price: 15, category: 'drinks', image: '/api/placeholder/300/200'}, {id: 2, name: 'لاتيه', price: 18, category: 'drinks', image: '/api/placeholder/300/200'}, {id: 3, name: 'كابتشينو', price: 20, category: 'drinks', image: '/api/placeholder/300/200'} ], desserts: [ {id: 4, name: 'كيك الشوكولاتة', price: 25, category: 'desserts', image: '/api/placeholder/300/200'} ] }; let cart = []; // عرض المنتجات function renderProducts(category = 'all') { const grid = document.getElementById('productsGrid'); let items = []; if (category === 'all') { items = [...products.drinks, ...products.desserts]; } else { items = products[category]; } grid.innerHTML = items.map(product => ` <div class="menu-item bg-white rounded-lg shadow-sm p-4"> <img src="${product.image}" alt="${product.name}" class="w-full h-48 object-cover rounded-lg mb-4"> <h3 class="text-lg font-bold mb-2">${product.name}</h3> <div class="flex justify-between items-center"> <span class="text-lg font-bold">${product.price} ريال</span> <button onclick="addToCart(${product.id})" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700"> إضافة للسلة </button> </div> </div> `).join(''); } // إضافة للسلة function addToCart(productId) { const product = [...products.drinks, ...products.desserts].find(p => p.id === productId); cart.push(product); updateCartCount(); } // تحديث عدد منتجات السلة function updateCartCount() { document.getElementById('cartCount').textContent = cart.length; } // عرض السلة function showCart() { const cartItems = document.getElementById('cartItems'); const cartTotal = document.getElementById('cartTotal'); let total = 0; cartItems.innerHTML = cart.map(item => { total += item.price; return ` <div class="flex justify-between items-center mb-2 p-2 bg-gray-50 rounded"> <span>${item.name}</span> <span>${item.price} ريال</span> </div> `; }).join(''); cartTotal.textContent = total + ' ريال'; document.getElementById('cartModal').classList.remove('hidden'); } // إخفاء السلة function hideCart() { document.getElementById('cartModal').classList.add('hidden'); } // إتمام الطلب function checkout() { if (cart.length === 0) { alert('السلة فارغة'); return; } alert('تم إرسال طلبك بنجاح!'); cart = []; updateCartCount(); hideCart(); } // تصفية المنتجات function filterProducts(category) { renderProducts(category); } // تهيئة الصفحة document.addEventListener('DOMContentLoaded', () => { renderProducts(); }); </script> </body> </html>
